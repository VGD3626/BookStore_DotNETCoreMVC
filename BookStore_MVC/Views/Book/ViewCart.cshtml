@model IEnumerable<BookStore_MVC.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="cartItems">
            @foreach (var book in Model)
            {
                <tr data-book-id="@book.Id">
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>$@book.Price.ToString()</td>
                    <td>
                        <button class="btn btn-danger remove-from-cart" data-id="@book.Id">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-controller="Cart" asp-action="Index" method="get">
        <button type="submit" class="btn btn-primary">Proceed to Checkout</button>
    </form>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.remove-from-cart').click(function (e) {
                e.preventDefault(); // Prevent the default form submission

                var bookId = $(this).data('id'); // Get the book ID from data attribute

                // AJAX request to remove the book from the cart
                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "Book")', // URL of the action
                    type: 'POST',
                    data: { id: bookId }, // Sending the book ID
                    success: function (result) {
                        // If the removal was successful, remove the row from the table
                        $('tr[data-book-id="' + bookId + '"]').remove();

                        // Optionally, you can also check if the cart is empty and update the UI
                        if ($('#cartItems tr').length === 0) {
                            $('#cartItems').html('<tr><td colspan="4">Your cart is empty.</td></tr>');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error removing book: ", error);
                        alert("Could not remove the book from the cart. Please try again.");
                    }
                });
            });
        });
    </script>
}