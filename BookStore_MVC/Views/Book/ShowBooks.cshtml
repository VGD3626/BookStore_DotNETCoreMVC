@model IEnumerable<BookViewModel>
@{
    ViewBag.Title = "Books";
}

@if (Model.Count() > 0)
{
    <div class="container">
        <h3 class="display-4">All Books</h3>
        <div class="row" style="margin-top: 65px;">
            <partial name="_BooksCards" />
        </div>
    </div>
}
else
{
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <img src="~/images/no-books.jpg" alt="No Books picture" style="height: 50%;width: 40%;">
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <h3 class="display-4">No Books</h3>
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <p>
                No books available yet, come back later or add your own !!
            </p>
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <a class="btn btn-primary" style="margin-right: 15px;"
               asp-controller="Book" asp-action="AddBook">Add Book</a>
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
        </div>
    </div>
}